@model ProductivityApp.Models.ViewModels.TemplateViewModel
<div class="container">
    <form method="POST" enctype="multipart/form-data" > 
        <div class="row">
            <h1>Create a new template</h1>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
                <label data-val-required="This is required">Name your workflow:</label>
                <span asp-validation-for="name" class="text-danger"></span>
                <input class="form-control" type="text" name="name" value="@Model.name" maxlength="30" />
                <label>Describe your workflow:</label>
                <input class="form-control" type="text" name="Description" value="@Model.description" maxlength="80" />
        </div>
        <div class="form-group">
            <label data-val-required="This is required.">Pick your files (PDF):</label>
            <span asp-validation-for="files" class="text-danger"></span>
            <input type="file" name="files" value ="@Model.files" multiple>
        </div>
        <div class="form-group" >
            <label> Choose an icon image:</label>
            <input type="file" name="image" value ="@Model.image">
        </div>
        <button onclick="test(true)"type="submit">Submit</button>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $('[data-val-required]').after('<span style="color:red; font-size: 20px; vertical-align: middle;"> *</span>');
        function test(b) {
            if(b) {
              //  alert("Ya done messed up");
            }else {
                console.log(b);
            }
        }
    
    </script>
}